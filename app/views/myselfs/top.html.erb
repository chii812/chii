<div class="title">
  <h2>・高校生</h2>
</div>
<div class="baby">
  <div class="baby-item">
    <%= image_tag 'koukou1.png', class:"baby-image" %>
    <%= image_tag 'koukou2.jpg', class:"baby-image" %>
  </div>
